    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Poetry Script",
            "type": "python",
            "request": "launch",
            "program": "poetry",
            "args": ["run", "parser"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "type": "node",
            "request": "attach",
            "name": "backend-api-debug-attach",
            "skipFiles": ["<node_internals>/**"],
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "address": "localhost",
            "timeout": 30000,
            "restart": true  
          }
    ]
}